{
    "name": "celeba_64d_dve_big",
    "n_gpu": 4,
    "batch_size": 48,
    "arch": {
        "type": "HourglassNet",
        "args": {
            "num_output_channels": 64,
            "scaled_norm_output": true,
            "num_stacks": 2,
            "use_group_norm": true
        }
    },
    "dataset": {
        "type": "CelebAPrunedAligned_MAFLVal",
        "args": {
            "root": "data/celeba",
            "imwidth": 170,
            "crop": 21
        }
    },
    "warper": {
        "type": "Warper",
        "args": {
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "dense_correlation_loss_dve",
    "loss_args": {"normalize_vectors": false},
    "metrics": [

    ],
    "visualizations": [
        "sphere_colormap",
        "sphere_rand_proj_colormap"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "off",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "saved/"
    }
}
