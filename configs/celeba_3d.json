{
    "name": "celeba_3d",
    "n_gpu": 1,
    "batch_size": 32,
    "arch": {
        "type": "HourglassNet",
        "args": {
            "num_output_channels": 3
        }
    },
    "dataset": {
        "type": "CelebAPrunedAligned_MAFLVal",
        "args": {
            "root": "data/celeba",
            "imwidth": 150
        }
    },
    "warper": {
        "type": "Warper",
        "args": {
            "crop": 11
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "dense_correlation_loss",
    "metrics": [

    ],
    "visualizations": [
        "sphere_colormap",
        "sphere_scatter3d"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboardX": true,
        "log_dir": "saved/"
    }
}
